<%= form_for @song do |f| %>
   <% if @song.errors.any? %>
     <div id="error_explanation">
       <h2>
         <%= pluralize(@song,errors.count, "error") %>
         prohibited this post from being saved:
       </h2>
 
       <ul>
         <% @song.errors.full_messages.each do |message| %>
           <li><%= message %></li>
         <% end %>
       </ul>
     </div>
   <% end %>
 
   <% attributes = [:title, :release_year, :genre, :artist_name] %>
   <% attributes.each do |attr| %>
     <div class="field">
       <%= f.label attr %><br>
       <%= f.text_field attr %>
     </div>
   <% end %>
 
   <div class="field">
     <%= f.label :released %><br>
     <%= f.check_box :released %>
   </div>
 
   <div class="actions">
     <%= f.submit %>
   </div>
 <% end %>